{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C Program",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-mconsole",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "encode.c", "test_encode.c", "types.h", "common.h", "encode.h", "decode.h", "stegano.h", "decode.c", "stegano.c",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile current C file with GCC",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["Run Program"]
    },
    {
      "label": "Run Program",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
